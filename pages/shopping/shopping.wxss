/* pages/shopping/shopping.wxss */

page {
  height: 100%;
  width: 100%;
}

.userinfo {
  margin-top: 0x;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 0px;
}

.goods {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20px;
  justify-content: center;
}

.good {
  margin-top: 0x;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  border: 1px solid #ccc;
  border-radius: 10%;
}

.good_img {
  width: 300rpx;
  height: 180rpx;
  border-radius: 10%;
}
